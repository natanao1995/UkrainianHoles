<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#343137</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextViewToolbar">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#343137</item>
    </style>

    <style name="ChooseDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_up_with_fade</item>
        <item name="android:windowExitAnimation">@anim/translate_down_with_fade</item>
    </style>

    <style name="ChooseDialogButton">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ChooseDialogButtonTop" parent="ChooseDialogButton">
        <item name="android:background">@drawable/bg_choose_dialog_button_top</item>
    </style>

    <style name="ChooseDialogButtonMiddle" parent="ChooseDialogButton">
        <item name="android:background">@drawable/bg_choose_dialog_button_middle</item>
    </style>

    <style name="ChooseDialogButtonBottom" parent="ChooseDialogButton">
        <item name="android:background">@drawable/bg_choose_dialog_button_bottom</item>
    </style>

    <style name="FilterRadioButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:button">@color/colorTransparent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_radio_button</item>
    </style>
</resources>
