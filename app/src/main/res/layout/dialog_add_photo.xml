<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        tools:padding="32dp"
        tools:background="#ff0000">

    <Button
            android:id="@+id/buttonFromCamera"
            style="@style/ChooseDialogButtonTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/take_photo_from_camera"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            app:layout_constraintTop_toBottomOf="@id/buttonFromCamera"/>

    <Button
            android:id="@+id/buttonFromGallery"
            style="@style/ChooseDialogButtonMiddle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/take_photo_from_gallery"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1"/>

    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            app:layout_constraintTop_toBottomOf="@id/buttonFromGallery"/>


    <Button
            android:id="@+id/buttonSkip"
            style="@style/ChooseDialogButtonBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2"/>

</androidx.constraintlayout.widget.ConstraintLayout>